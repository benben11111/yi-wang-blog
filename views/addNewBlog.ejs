              const blogContent = CKEDITOR.instances.blogContent.getData();
              //console.log(`${blogTitle}: ${blogContent}`);

             const blog ={
              blogTitle,
              blogContent
          }

          $.post("addNewBlog", {blog}).then(newlyAddedBlog => {
            $("#blogTitle").val("");
            CKEDITOR.instances.blogContent.setData("");
          })
          
          window.location="/blogs";

          });
      });
  </script>
