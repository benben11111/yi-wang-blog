  <body
    data-spy="scroll"
    data-target=".navbar"
    data-offset="70"
    id="body-container"
  >
 
    <!-- #header -->
    <!-- <section> -->
    <header>
      <!-- #navbar -->
      <nav class="navbar navbar-expand-lg fixed-top navbar-menu">
        <a href="/" class="navbar-brand text-dark text-uppercase"
          ><span class="h3 font-weight-bold text-light">Yi's Blog</span></a
        >
        <button
          type="button"
          class="navbar-toggler"
          data-toggle="collapse"
          data-target="#myNavbar"
        >
          <div class="bg-light line1"></div>
          <div class="bg-light line2"></div>
          <div class="bg-light line3"></div>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end text-uppercase font-weight-bold"
          id="myNavbar"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/" class="nav-link menu-item m-2 text-light h4">Home</a>
            </li>
            <li class="nav-item">
              <a href="/allBlogs" class="nav-link menu-item m-2 text-light h4"
                >Blogs</a
              >
            </li>

            <% if(!activeUser) {%>
            <li class="nav-item">
              <a href="/login" class="nav-link menu-item m-2 text-light h4"
                >Login</a
              >
            </li>
            <%} else {%>
            <li class="nav-item">
              <a href="/myBlogs" class="nav-link menu-item m-2 text-light h4"
                >My Blog</a
              >
            </li>
            <li class="nav-item">
              <a href="/addNewBlog" class="nav-link menu-item m-2 text-light h4"
                >Add New Blog</a
              >
            </li>
            <li class="nav-item">
              <a href="/signup" class="nav-link menu-item m-2 text-light h4"
                >Sign Up</a
              >
            </li>
            <li class="nav-item">
              <a href="/logout" class="nav-link menu-item m-2 text-light h4"
                >Log out</a
              >
            </li>
            <% }%>
            <li class="nav-item">
              <a href="/contactMe" class="nav-link menu-item m-2 text-light h4"
                >Contact</a
              >
            </li>
          </ul>
        </div>
      </nav>
      <!-- #endnavbar -->
    </header>
